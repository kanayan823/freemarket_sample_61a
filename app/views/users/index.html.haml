.wrapper
  =render 'shared/sell-header'
  %main.single-main
    %section.single-main__container
      %h2.single-main__container__header
        新規会員登録
      %form.single-main__container__signup-form{action: "", method: "POST", novalidate: "novalidate"}
        .single-main__container__signup-form__content
          = link_to new_user_registration_path, method: :get, class: 'contents__btn contents__btn__mail' do
            = icon('far', 'envelope')
            メールアドレスで登録する
          = link_to '#', method: :get, class: 'contents__btn contents__btn__facebook' do
            = icon('fab', 'facebook-square')
            Facebookで登録する
          = button_tag '', class: 'contents__btn contents__btn__google' do
            = image_tag "#{asset_path "g_rainbow.png"}", class: 'contents__btn__google__icon-google', size: '30x30'
            Googleで登録する
  = render 'shared/sell-footer'