.wrapper
  .single-container__step3
    = render 'users/new-account-header'
    %main.single-main
      %section.single-main__container
        %h2.single-main__container__header
          住所入力
        .single-main__container__registration-form
          = form_for @address do |f|
            = render "devise/shared/error_messages", resource: @address
            .single-main__container__registration-form__content
              .single-main__container__registration-form__content__input-box
                = f.label "お名前 (全角)"
                %span.single-main__container__registration-form__content__input-box__require
                  必須
                = f.text_field :family_name, placeholder: "例) 山田", class: "single-main__container__registration-form__content__input-box__default"
                = f.text_field :first_name, placeholder: "例) 花子", class: "single-main__container__registration-form__content__input-box__default"
              .single-main__container__registration-form__content__input-box
                = f.label "お名前 カナ (全角)"
                %span.single-main__container__registration-form__content__input-box__require
                  必須
                = f.text_field :family_name_kana, placeholder: "例) ヤマダ", class: "single-main__container__registration-form__content__input-box__default"
                = f.text_field :first_name_kana, placeholder: "例) ハナコ", class: "single-main__container__registration-form__content__input-box__default"
              .single-main__container__registration-form__content__input-box
                = f.label :郵便番号
                %span.single-main__container__registration-form__content__input-box__require
                  必須
                = f.text_field :zip_code, placeholder: "例) 1234567", class: "single-main__container__registration-form__content__input-box__default"
              .single-main__container__registration-form__content__input-box
                = f.label :都道府県
                %span.single-main__container__registration-form__content__input-box__require
                  必須
                .single-main__container__registration-form__content__input-box__prefectures
                  .single-main__container__registration-form__content__input-box__prefectures__select-wrap
                    = icon('fas', 'chevron-down', class: 'icon-arrow-bottom')
                    = f.select :prefecture, Address.prefectures.keys, {prompt: "--"}, class:"single-main__container__registration-form__content__input-box__prefectures__select-wrap__default"
              .single-main__container__registration-form__content__input-box
                = f.label :市区町村
                %span.single-main__container__registration-form__content__input-box__require
                  必須
                = f.text_field :city, placeholder: "例) 横浜市緑区", class: "single-main__container__registration-form__content__input-box__default"
              .single-main__container__registration-form__content__input-box
                = f.label :番地
                %span.single-main__container__registration-form__content__input-box__require
                  必須
                = f.text_field :address, placeholder: "例) 青山1-1", class: "single-main__container__registration-form__content__input-box__default"
              .single-main__container__registration-form__content__input-box
                = f.label :建物名
                %span.form-arbitrary
                  任意
                = f.text_field :building, placeholder: "例) 柳ビル103", class: "single-main__container__registration-form__content__input-box__default"
              .single-main__container__registration-form__content__input-box
                = f.submit '次へ進む', class: 'single-main__container__registration-form__content__input-box__btn'
  =render 'shared/sell-footer'
= render "devise/shared/links"