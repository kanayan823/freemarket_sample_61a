.wrapper
  .single-container__step4
    = render 'users/new-account-header'
    %main.single-main
      %section.single-main__container
        %h2.single-main__container__header
          支払い方法
        .single-main__container__registration-form
          = form_with url: first_card_create_path, method: :post, id: 'charge-form', html: { name: "inputForm" } do |f|
            .single-main__container__registration-form__content
              .single-main__container__registration-form__content__input-box
                = f.label :カード番号
                %span.single-main__container__registration-form__content__input-box__require
                  必須
                = f.text_field :card_number, placeholder: '半角英数字のみ', class: "single-main__container__registration-form__content__input-box__default", maxlength: "16"
                %ul.card-list
                  = image_tag "#{asset_path "visa.svg"}", class: 'card-list__icon'
                  = image_tag "#{asset_path "master.svg"}", class: 'card-list__icon'
                  = image_tag "#{asset_path "saison-card.svg"}", class: 'card-list__icon'
                  = image_tag "#{asset_path "jcb.svg"}", class: 'card-list__icon'
                  = image_tag "#{asset_path "american_express.svg"}", class: 'card-list__icon'
                  = image_tag "#{asset_path "dinersclub.svg"}", class: 'card-list__icon'
                  = image_tag "#{asset_path "discover.svg"}", class: 'card-list__icon'
              .single-main__container__registration-form__content__input-box
                = f.label :有効期限
                %span.single-main__container__registration-form__content__input-box__require
                  必須
                .single-main__container__registration-form__content__input-box__card-expiration
                  .single-main__container__registration-form__content__input-box__card-expiration__select-wrap
                    = icon('fas', 'chevron-down', class: 'icon-arrow-bottom')
                    = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: "single-main__container__registration-form__content__input-box__card-expiration__select-wrap__default"
                  .single-main__container__registration-form__content__input-box__card-expiration__select-wrap.select-wrap__year
                    = icon('fas', 'chevron-down', class: 'icon-arrow-bottom')
                    = f.select :exp_year, [["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029],["30",2030]],{} , class: "single-main__container__registration-form__content__input-box__card-expiration__select-wrap__default"
              .single-main__container__registration-form__content__input-box
                = f.label :セキュリティーコード
                %span.single-main__container__registration-form__content__input-box__require
                  必須
                = f.text_field :cvc, placeholder: 'カード背面4桁もしくは3桁の番号', class: "single-main__container__registration-form__content__input-box__default", maxlength: "4"
                .single-main__container__registration-form__content__input-box__text-right
                  %p
                    = link_to "", class: "single-main__container__registration-form__content__input-box__text-right__text" do
                      = icon('fas', 'question-circle', class: 'single-main__container__registration-form__content__input-box__text-right__icon')
                      カード裏面の番号とは？
                      %br
                      #card_token
                      %br
                = f.submit '次へ進む', id: "token_submit", class: 'single-main__container__registration-form__content__input-box__btn'
    =render 'shared/sell-footer'